@{
    ViewData["Title"] = "Home Page";
}

@* Home page *@
<div class="home text-white vh-100 d-flex flex-column justify-content-center align-items-center">
    <p class="reveal">Hi :D</span>, I'm Austin!</p>
    <p class="reveal gradient-text">A Software Developer</p>
    <p class="reveal">I Learn, I Code, I Create</p>

    @* Social links: GitHub and LinkedIn *@
    <div class="reveal home-social-media d-flex align-items-center mt-3">
        <a href="https://github.com/AustinCKR" target="_blank" rel="noopener noreferrer"
           class="text-white me-3" aria-label="GitHub profile" title="GitHub"
           style="text-decoration:none; display:inline-flex; align-items:center;">
            <i class="fab fa-github fa-3x" aria-hidden="true"></i>
        </a>

        <a href="https://www.linkedin.com/in/austin-chung-khai-rui-940b92267/" target="_blank" rel="noopener noreferrer"
           class="text-white" aria-label="LinkedIn profile" title="LinkedIn"
           style="text-decoration:none; display:inline-flex; align-items:center;">
            <i class="fab fa-linkedin fa-3x" aria-hidden="true"></i>
        </a>
    </div>

    <div class="link-div reveal d-flex">
        <a class="link text-white text-decoration-none underline-animate" asp-area="" asp-controller="Home" asp-action="AboutMe">
            Who am I?
            <i class="fa-solid fa-up-long link-icon"></i>
        </a>
        <a class="link text-white text-decoration-none underline-animate" asp-area="" asp-controller="Home" asp-action="Projects">
            What I did?
            <i class="fa-solid fa-up-long link-icon"></i>
        </a>
    </div>
</div>