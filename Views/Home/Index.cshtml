@* Projects Carousel Section *@
<div class="vh-100 d-flex align-items-center justify-content-center bg-dark">
    <div class="container-fluid">
        <div id="projectsCarousel" class="carousel slide multi-item-carousel" 
             data-total-slides="@projects.Count" 
             data-visible-slides="3">
             
            @* Dynamic Carousel Indicators *@
            <div class="carousel-indicators">
                @for (int i = 0; i < projects.Count; i++)
                {
                    <button type="button" 
                            data-bs-target="#projectsCarousel" 
                            data-bs-slide-to="@i" 
                            class="@(i == 0 ? "active" : "")" 
                            aria-current="@(i == 0 ? "true" : "false")" 
                            aria-label="Slide @(i + 1)">
                    </button>
                }
            </div>

            @* Carousel Items *@
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="carousel-track">
                        @* Add 3 duplicates at the beginning (last 3 projects) *@
                        @for (int i = projects.Count - 3; i < projects.Count; i++)
                        {
                            @await Html.PartialAsync("_ProjectCard", projects[i])
                        }
                        
                        @* Render all real project cards *@
                        @foreach (var project in projects)
                        {
                            @await Html.PartialAsync("_ProjectCard", project)
                        }
                        
                        @* Add 3 duplicates at the end (first 3 projects) *@
                        @for (int i = 0; i < 3; i++)
                        {
                            @await Html.PartialAsync("_ProjectCard", projects[i])
                        }
                    </div>
                </div>
            </div>

            @* Carousel Controls *@
            <button class="carousel-control-prev" type="button">
                <div class="carousel-control-prev-icon-custom">
                    <i class="fas fa-chevron-left fa-2x text-white"></i>
                </div>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button">
                <div class="carousel-control-next-icon-custom">
                    <i class="fas fa-chevron-right fa-2x text-white"></i>
                </div>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</div>

